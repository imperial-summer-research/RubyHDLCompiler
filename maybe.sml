(**************************************************************************)
(***                                                                    ***)
(***    A means of tagging values as being valid or invalid:            ***)
(***                                                                    ***)
(**************************************************************************)
(**************************************************************************)

structure Maybe :
  sig
        type 'a maybe

        val success    : 'a -> 'a maybe
        val failure    : 'a maybe
        val successful : 'a maybe -> bool
        val the  : 'a maybe -> 'a
  end =
struct

(**************************************************************************)
(**************************************************************************)

datatype 'a maybe = Ok of 'a
                  | Nothing

fun success x = Ok x
val failure   = Nothing

fun successful (Ok x)  = true
  | successful Nothing = false

fun the (Ok x)   = x

(**************************************************************************)
(**************************************************************************)

end (* of structure Maybe *);
(* open Maybe *)
